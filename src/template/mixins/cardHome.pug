mixin cardHome(links)
  template(x-for=links)
    ul.col-span-3.grid.grid-cols-1.gap-y-6.gap-x-6(class='sm:grid-cols-2 sm:gap-y-10 md:grid-cols-3 xl:gap-x-8')
      each el in links
        li
          .group.relative(class='before:absolute before:-inset-2.5 before:rounded-[20px] before:bg-gray-50 before:opacity-0 hover:before:opacity-100')
            .relative.overflow-hidden.rounded-lg.bg-gray-100.ring-1(class='aspect-[2/1] ring-gray-900/10')
              img.absolute.inset-0.h-full.w-full(src=el.src alt='')
            h4.mt-4.text-sm.font-medium.text-slate-900(class='group-hover:text-indigo-600')
              a(href=el.href)
                span.absolute.z-10(class='-inset-2.5')
                span.relative()= el.title
            p.relative.text-xs.font-medium.text-slate-500(class='mt-1.5')
              span.mr-2()= el.nbr
              | components
